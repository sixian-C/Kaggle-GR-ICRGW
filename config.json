{
  "name": "Contrails_UNET",
  "n_gpu": 1,

  "arch": {
    "type": "Contrails_UNET",
    "args": {}
  },
  "data_loader": {
    "type": "ContrailsDataLoader",
    "args": {
      "data_dir": "data/",
      "batch_size": 8,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 2
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "dice_loss_global",
  "metrics": ["dice_global"],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 10,

    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,

    "monitor": "min val_loss",
    "early_stop": 10,

    "tensorboard": true
  }
}
